@model CrimeTrackingSystem_CTS_.Models.NewsViewModel
@{
    ViewBag.AdminTitle = "News Record Insertion";
    ViewBag.PageTitle = "News Record Insertion";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if ((string)TempData["result"] == "true")
{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            Swal.fire({
                icon: 'success',
                title: 'Success',
                text: 'data recorded successfully !'
            });
        });
    </script>
}

@*form*@
<div class="center-div" id="createForm">
    @using (Html.BeginForm("NewsInsertion", "Admin", FormMethod.Post))
    {
        <div class="policeContainer">
            <div class="fixedFormHead">
                <h5>create new entry</h5>
                <a href="@Url.Action("NewsRecord", "Admin")" class="btn btn-sm btn-danger" aria-label="Close" onclick="hidePoliceStationForm()">
                    <span aria-hidden="true">&times;</span>
                </a>
            </div>
            <div class="policeItem">
                <div>
                    <span>
                        <i class="fa-solid fa-star"></i>
                        @Html.LabelFor(model => model.Title)
                        <small>@Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger fw-bolder" })</small>
                    </span>
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "cc-box" } })
                </div>
            </div>
            <div class="policeItem">
                <div>
                    <span>
                        <i class="fa-solid fa-pen-nib"></i>
                        @Html.LabelFor(model => model.Detail)
                        <small>@Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger fw-bolder" })</small>
                    </span>
                    @Html.EditorFor(model => model.Detail, new { htmlAttributes = new { @class = "cc-box" } })
                </div>
            </div>
            <div class="policeItem">
                <div><button class="btn btn-primary">Insert row</button></div>
            </div>
        </div>
    }
</div>

