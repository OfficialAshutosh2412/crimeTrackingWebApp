@model IEnumerable<CrimeTrackingSystem_CTS_.Models.MissingPerson>

@{
    ViewBag.AdminTitle = "Missing Person Status";
    ViewBag.PageTitle = "Missing Person Status";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="p-2">
    <a class="btn btn-sm btn-outline-warning" href="@Url.Action("Status","Admin")"><i class="fa-solid fa-arrow-left"></i></a>
</div>
<div class="table-container">
    <table class="table table-light display responsive nowrap table-bordered text-black" width="100%" id="tableJsId">
        <thead>
            <tr>
                <th>
                    <label>Action</label>
                </th>
                <th>
                    <label>ID</label>
                </th>
                <th>
                    <label>Status</label>
                </th>
                <th>
                    <label>Username</label>
                </th>
                <th>
                    <label>Police Station</label>
                </th>
                <th>
                    <label>Person</label>
                </th>
                <th>
                    <label>Person Phone</label>
                </th>
                <th>
                    <label>Last location</label>
                </th>
                <th>
                    <label>Person Email</label>
                </th>
                <th>
                    <label>Ransom</label>
                </th>
                <th>
                    <label>Details</label>
                </th>
                <th>
                    <label>Date and Time</label>
                </th>
                <th>
                    <label>Person Image</label>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("PersonStatusEdit","Admin", new { id=item.Id})">
                            <i class='fa-solid fa-pen-to-square'></i>
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    @if (item.Status == "Pending")
                    {
                        <td>
                            <label><i class="fa-solid fa-clock text-warning"></i> @item.Status</label>
                        </td>
                    }
                    @if (item.Status == "Solved")
                    {
                        <td>
                            <label><i class="fa-solid fa-circle-check text-success"></i> @item.Status</label>
                        </td>
                    }
                    @if (item.Status == "Rejected")
                    {
                        <td>
                            <label><i class="fa-solid fa-circle-xmark text-danger"></i> @item.Status</label>
                        </td>
                    }
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PoliceStationName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Person)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PersonPhone)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.LastLocation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PersonEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ransom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Details)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrentDateTime)
                    </td>
                    <td>
                        <a href="@Url.Content(item.PersonImage)" target="_blank">
                            <img src="@Url.Content(item.PersonImage)" width="100" alt="missing person image" />
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>