<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CTS | Admin | @ViewBag.AdminTitle</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.datatables.net/v/bs5/jq-3.7.0/dt-1.13.8/r-2.5.0/rg-1.4.1/datatables.min.css" rel="stylesheet">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <!-- Include SweetAlert CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11">
    @RenderSection("head", required: false)
</head>
<body style="background:#343434;color:#ededed">
    @*header*@
    <nav class="navbar dark-mode navbar-expand-lg bg-body-tertiary p-0">
        <div class="container-fluid justify-content-between " id="navigator">
            <a href="@Url.Action("Index", "Admin")" class="navbar-brand">
                <img src="~/Images/cts_logo.png" />
            </a>
            <button class="navbar-toggler border-0 bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon fw-bolder"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end p-1" id="navbarNav">
                <ul class="navbar-nav p-0">
                    <li class="nav-item" id="adminhome">
                        <a href="@Url.Action("Index", "Admin")" class="nav-link text-light " aria-current="page"><i class="fa-solid fa-house"></i> Dashboard</a>
                    </li>
                    <li class="nav-item" id="PoliceStationEntry">
                        <a href="@Url.Action("PoliceStationEntry","Admin")" class="nav-link text-light"><i class="fa-solid fa-building-shield text-light"></i> Police Station</a>
                    </li>
                    <li class="nav-item" id="adminrecord">
                        <a href="@Url.Action("RecordRoom","Admin")" title="Records" class="nav-link text-light"><i class="fa-solid fa-file-signature text-light"></i> Records</a>
                    </li>
                    <li class="nav-item gallery-nav-link" id="gallery" style="cursor:pointer !important;" onmouseover="showGallery()" onmouseout="hideGallery()">
                        <a class="nav-link text-light" style="cursor:pointer !important"><i class="fa-solid fa-images"></i> Gallery</a>
                        <ul id="gallery-list">
                            <li><a href="@Url.Action("EventUpload", "Admin")">Events</a></li>
                            <li><a href="@Url.Action("CriminalUpload", "Admin")">Wanted Criminals</a></li>
                        </ul>
                    </li>
                    <li class="nav-item gallery-nav-link" id="gallery" style="cursor:pointer !important;" onmouseover="showAdminGallery()" onmouseout="hideAdminGallery()">
                        <a class="nav-link text-light" style="cursor:pointer !important"><i class="fa-solid fa-calendar-check text-light"></i> Status</a>
                        <ul id="admin-gallery-list">
                            <li><a href="@Url.Action("UpdateCrimeComplainStatus", "Admin")">Crime Complain Status</a></li>
                            <li><a href="@Url.Action("UpdateGeneralComplainStatus", "Admin")">General Complain Status</a></li>
                            <li><a href="@Url.Action("UpdateMissingPersonStatus", "Admin")">Missing Person Status</a></li>
                            <li><a href="@Url.Action("UpdateMissingValuableStatus", "Admin")">Missing Valuable Status</a></li>
                        </ul>
                    </li>
                    <li class="nav-item" title="">
                        <a href="@Url.Action("ContactRequests","Admin")" title="Records" class="nav-link text-light"><i class="fa-solid fa-message text-light"></i> Contact</a>
                    </li>
                    <li class="nav-item" title="">
                        <a href="@Url.Action("FaqRecords","Admin")" title="Records" class="nav-link text-light"><i class="fa-solid fa-circle-question text-light"></i> FAQ</a>
                    </li>
                    <li class="nav-item" title="">
                        <a href="@Url.Action("NewsRecord","Admin")" title="Records" class="nav-link text-light"><i class="fa-solid fa-newspaper text-light"></i> News</a>
                    </li>
                    <li class="nav-item " title="">
                        <a href="@Url.Action("Logout","Admin")" title="Records" class=" btn btn-danger"><i class="fa-solid fa-right-from-bracket"></i> Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
    @*footer*@
    <footer class="footer" id="footer">
        <div class="rights" id="rights">
            <div>
                <label>All rights are reserved &copy; @DateTime.Now.Year | </label>
            </div>
            <div class="footer-follow">
                <a href="https://www.facebook.com/ashutosh.prasad.754365/" target="_blank"><i class="fa-brands fa-facebook-f"></i></a>
                <a href="https://www.instagram.com/official.ashu.2000/" target="_blank"><i class="fa-brands fa-square-instagram"></i></a>
                <a href="https://twitter.com/Ashutos96662173" target="_blank"><i class="fa-brands fa-twitter"></i></a>
                <a href="https://wa.me/6386239194" target="_blank"><i class="fa-brands fa-square-whatsapp"></i></a>
            </div>
        </div>
    </footer>

    <!-- Include SweetAlert JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/v/bs5/jq-3.7.0/dt-1.13.8/r-2.5.0/rg-1.4.1/datatables.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/admin")
    <script>
        $(document).ready(function () {
            $("#tableJsId").dataTable();
        });
    </script>
</body>
</html>
