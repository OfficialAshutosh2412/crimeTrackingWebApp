<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CTS | Admin | @ViewBag.AdminTitle</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.datatables.net/v/bs5/jq-3.7.0/dt-1.13.8/r-2.5.0/rg-1.4.1/datatables.min.css" rel="stylesheet">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <!-- Include SweetAlert CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11">
    @RenderSection("head", required: false)
</head>
<body style="background:#343434;color:#ededed">
    @*navlist*@
    <div class="gallery-list" id="gallery-list" style="left: 65%; top: 10%; background: #1d4f75;">
        <div><a href="@Url.Action("EventUpload", "Admin")" style="color:white">Event Uploads</a></div>
        <div><a href="@Url.Action("CriminalUpload", "Admin")" style="color:white">Criminal Uploads</a></div>
    </div>
    <div class="gallery-list" id="status-list" style="left: 80%; top: 10%; background: #1d4f75;">
        <div><a href="@Url.Action("UpdateCrimeComplainStatus","Admin")"  style="color:white">Crime Complain</a></div>
        <div><a href="@Url.Action("UpdateGeneralComplainStatus","Admin")"  style="color:white">General Complain</a></div>
        <div><a href="@Url.Action("UpdateMissingPersonStatus","Admin")"  style="color:white">Missing Person</a></div>
        <div><a href="@Url.Action("UpdateMissingValuableStatus","Admin")"  style="color:white">Missing Valuable</a></div>
    </div>
    <nav class="admin-nav">
        <div class="admin-title">
            <h3 class="d-flex align-items-center w-100">
                <a href="@Url.Action("Index","Admin")"><img src="~/Images/cts_logo.png" alt="cts.png" /></a>
                &nbsp;|&nbsp;@ViewBag.PageTitle
            </h3>
        </div>
        <div class="admin-items">
            <div id="adminhome">
                <a href="@Url.Action("Index","Admin")" title="Dashboard"><i class="fa-solid fa-house text-light"></i></a>
            </div>
            <div id="adminrecord">
                <a href="@Url.Action("RecordRoom","Admin")" title="Records"><i class="fa-solid fa-file-signature text-light"></i></a>
            </div>
            <div id="PoliceStationEntry">
                <a href="@Url.Action("PoliceStationEntry","Admin")" title="Police Station"><i class="fa-solid fa-building-shield text-light"></i></a>
            </div>
            <div class="gallery-nav" id="gallery" style="cursor:pointer !important" onclick="showGallery()">
                <label title="Gallery" style="cursor:pointer !important"><i class="fa-solid fa-images text-light"></i></label>
            </div>
            <div id="ContactRequests">
                <a href="@Url.Action("ContactRequests","Admin")" title="Contact Us requests"><i class="fa-solid fa-message text-light"></i></a>
            </div> 
            <div id="FaqRecords">
                <a href="@Url.Action("FaqRecords", "Admin")" title="FAQ"><i class="fa-solid fa-circle-question text-light"></i></a>
            </div>
            <div id="NewsRecord">
                <a href="@Url.Action("NewsRecord", "Admin")" title="News"><i class="fa-solid fa-newspaper text-light"></i></a>
            </div>
            <div id="status" style="cursor:pointer !important" onclick="showStatus()">
                <label title="status" style="cursor:pointer !important"><i class="fa-solid fa-calendar-check text-light"></i></label>
            </div>
            <div>
                <a href="@Url.Action("Logout","Admin")" class="nav-link fw-bolder" title="logout"><i class="fa-solid fa-right-from-bracket"></i></a>
            </div>
        </div>
    </nav>
    @RenderBody()
    <footer class="admin-foot">
        <p class="">All Rights are Reserved &copy;CTS @DateTime.Now.Year</p>
    </footer>


    <!-- Include SweetAlert JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/v/bs5/jq-3.7.0/dt-1.13.8/r-2.5.0/rg-1.4.1/datatables.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/admin")
    <script>
        $(document).ready(function () {
            $("#tableJsId").dataTable();

        });
    </script>
</body>
</html>
