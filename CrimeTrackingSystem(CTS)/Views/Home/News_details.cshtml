@model CrimeTrackingSystem_CTS_.Models.News
@{
    ViewBag.Title = "News_details";
    Layout = null;
}
<title>News Details</title>

<link href="~/Content/style.css" rel="stylesheet" />

<section class="newsDetails">
    <h3>News Details</h3>
    <div>
        <h2>@ViewBag.gettingData.Id). @ViewBag.gettingData.Title</h2>
        <p><strong>Details :-</strong> @ViewBag.gettingData.Detail</p>
    </div>
    <div class="timedate">
        @if (ViewBag.gettingData.CurrentDateTime != null)
        {
            DateTime currentDateTime;
            if (DateTime.TryParse(ViewBag.gettingData.CurrentDateTime, out currentDateTime))
            {
                <p>@currentDateTime.ToString("dddd, MMMM dd, yyyy h:mm tt")</p>
            }
            else
            {
                <p>Invalid date and time format.</p>
            }
        }
        else
        {
            <p>No date and time available.</p>
        }
    </div>
    </section>