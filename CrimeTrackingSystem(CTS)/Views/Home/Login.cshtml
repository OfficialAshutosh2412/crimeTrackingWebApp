@model CrimeTrackingSystem_CTS_.Models.Login
@{
    ViewBag.Title = "Login";
}

@if (ViewBag.CredError != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: '@ViewBag.CredError'
            });
        });
    </script>
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{

    @*login*@
    <div class="signin bg-white p-5 rounded">
        <h1>Login</h1>
        <div class="mb-3">
            <span>
                <i class="fa-solid fa-envelope"></i>
                @Html.LabelFor(model => model.Email, new { @class = "form-label fw-bolder fs-6" })
                <br />
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger fw-bolder " })
            </span>
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "cc-box" } })
        </div>
        <div class="mb-3">
            <span>
                <i class="fa-solid fa-key"></i>
                @Html.LabelFor(model => model.Password, new { @class = "form-label fw-bolder fs-6" })
                <br />
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger fw-bolder " })
            </span>
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "cc-box" } })
        </div>
        <div class="d-flex justify-content-start align-items-center">
            <button class="send p-2" id="myButton">login now !</button>
        </div>
        <a href="@Url.Action("Signup", "Home")" class="text-dark fw-bolder">click here to create account...</a>
    </div>
}



