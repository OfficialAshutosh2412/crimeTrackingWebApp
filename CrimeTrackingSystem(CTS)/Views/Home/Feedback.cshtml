@model CrimeTrackingSystem_CTS_.Models.Feedback
@{
    ViewBag.Title = "Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.message != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            Swal.fire({
                icon: 'success',
                title: 'Thank you !',
                text: '@ViewBag.message'
            });
        });
    </script>
}

@using (Html.BeginForm("Feedback", "Home", FormMethod.Post))
{
    @*feedback*@
    <div class="signin bg-white p-5 rounded">
        <i class="fa-solid fa-hand-holding-heart" style="font-size:3rem;text-align:center;color:#3fc387;width:100%"></i>
        <h3 class="text-center">Thank you for your words...</h3>
        <div class="mb-3">
            <span>
                <i class="fa-solid fa-user"></i>
                @Html.LabelFor(model => model.Yourname, new { @class = "form-label fw-bolder fs-6" })
            </span>
            <br />
            <small class="text-danger fw-bold">
                @Html.ValidationMessageFor(model => model.Yourname)
            </small>
            @Html.EditorFor(model => model.Yourname, new { htmlAttributes = new { @class = "cc-box", style = "background:#f6f6f6" } })
        </div>
        <div class="mb-3">
            <span>
                <i class="fa-solid fa-envelope"></i>
                @Html.LabelFor(model => model.E_mail, new { @class = "form-label fw-bolder fs-6" })
            </span>
            <br />
            <small class="text-danger fw-bold">
                @Html.ValidationMessageFor(model => model.E_mail)
            </small>
            @Html.EditorFor(model => model.E_mail, new { htmlAttributes = new { @class = "cc-box", style = "background:#f6f6f6" } })
        </div>
        <div class="mb-3">
            <span>
                <i class="fa-solid fa-pen-fancy"></i>
                @Html.LabelFor(model => model.Words, new { @class = "form-label fw-bolder fs-6" })
            </span>
            <br />
            <small class="text-danger fw-bold">
                @Html.ValidationMessageFor(model => model.Words)
            </small>
            @Html.TextBoxFor(model => model.Words, new { @class = "cc-box", style = "background:#f6f6f6", rows = "5" })
        </div>
        <div class="d-flex justify-content-start align-items-center">
            <button class="send p-2">submit my feedback</button>
        </div>
    </div>
}
