@model CrimeTrackingSystem_CTS_.Models.FeedbackViewModel
@{
    ViewBag.Title = "Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*@using (Html.BeginForm("Feedback", "Home", FormMethod.Post))*@
@using (Ajax.BeginForm("Feedback", "Home", new AjaxOptions() {
    HttpMethod = "POST",
    OnSuccess = "ClearFeedbackFields",
    LoadingElementId= "ContactLoader"
}))
{
    @*feedback*@
<div class="signin bg-white p-5 rounded">
    <i class="fa-solid fa-hand-holding-heart" style="font-size:3rem;text-align:center;color:#3fc387;width:100%"></i>
    <h3 class="text-center">Thank you for your words...</h3>
    <div class="mb-3">
        <span>
            <i class="fa-solid fa-user"></i>
            @Html.LabelFor(model => model.Yourname, new { @class = "form-label fw-bolder fs-6" })
        </span>
        <br />
        <small class="text-danger fw-bold">
            @Html.ValidationMessageFor(model => model.Yourname)
        </small>
        @Html.EditorFor(model => model.Yourname, new { htmlAttributes = new { @class = "cc-box", style = "background:#f6f6f6", id = "name" } })
    </div>
    <div class="mb-3">
        <span>
            <i class="fa-solid fa-envelope"></i>
            @Html.LabelFor(model => model.E_mail, new { @class = "form-label fw-bolder fs-6" })
        </span>
        <br />
        <small class="text-danger fw-bold">
            @Html.ValidationMessageFor(model => model.E_mail)
        </small>
        @Html.EditorFor(model => model.E_mail, new { htmlAttributes = new { @class = "cc-box", style = "background:#f6f6f6", id = "email" } })
    </div>
    <div class="mb-3">
        <span>
            <i class="fa-solid fa-pen-fancy"></i>
            @Html.LabelFor(model => model.Words, new { @class = "form-label fw-bolder fs-6" })
        </span>
        <br />
        <small class="text-danger fw-bold">
            @Html.ValidationMessageFor(model => model.Words)
        </small>
        @Html.TextAreaFor(model => model.Words, new { @class = "cc-box", style = "background:#f6f6f6", rows = "5", id = "words" })
    </div>
    <div class="d-flex justify-content-start align-items-center">
        <button class="send p-2" onclick="return validationCheck()">submit my feedback</button>
    </div>
    <div id="ContactLoader" class="loadingElementStyle">
        <img src="~/Images/loader/5.gif" />
        <img src="~/Images/loader/279.gif" />
    </div>
</div>
}
