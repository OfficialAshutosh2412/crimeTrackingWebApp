@model IEnumerable<CrimeTrackingSystem_CTS_.Models.News>
@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>News updates</h1>

<div class="table-container bg-light p-1">
    <table class="table table-light display responsive nowrap table-bordered text-black" width="100%" id="tableJsId">
        <thead class="table-warning">
            <tr>
                <th>Actions</th>
                <th>ID</th>
                <th>Title</th>
                <th>Post date & time</th>
            </tr>
        </thead>
        <tbody class="table-light">
            @if (Model != null)
            {
                foreach (var listdata in Model)
                {
                    <tr>
                        <th>
                            <a href="@Url.Action("News_details","Home", new { id=listdata.Id})" target="_blank">see details</a>
                        </th>
                        <td>@listdata.Id</td>
                        <td>@listdata.Title</td>
                        <td>@listdata.CurrentDateTime</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>


