
@{
    ViewBag.Title = "CrimeComplain";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="crime-complain">
    @*form*@
    <div class="crime-complain-form">
        <div>
            @*first row*@
            <div>
                <div>
                    <label><i class="fa-solid fa-user"></i> Username</label>
                    <input type="text" class="cc-box">
                </div>
                <div>
                    <label><i class="fa-solid fa-building-shield"></i> Police Station</label>
                    <select class="cc-box">
                        <option selected>--select--</option>
                    </select>
                </div>
                <div>
                    <label><i class="fa-solid fa-handcuffs"></i> Crime Type</label>
                    <select class="cc-box">
                        <option selected>--select--</option>
                        <option>Cyber crime</option>
                        <option>Drug Trafficking</option>
                        <option>Robbery</option>
                        <option>Violence</option>
                        <option>Burglary</option>
                        <option>Fraud</option>
                        <option>Money Laundering</option>
                        <option>Kidnapping</option>
                        <option>Assault</option>
                        <option>Theft</option>
                        <option>Human Trafficking</option>
                        <option>Terrorism</option>
                        <option>Murder</option>
                        <option>Rape</option>
                        <option>Domestic Violence</option>
                    </select>
                </div>
            </div>
            @*second row*@
            <div>
                <div>
                    <label><i class="fa-solid fa-handshake"></i> Involved Persons</label>
                    <input type="text" class="cc-box" placeholder="name persons who are involved in crime..."/>
                </div>
            </div>
            @*third row*@
            <div>
                <div>
                    <label><i class="fa-regular fa-image"></i> Give us Proof</label>
                    <input type="file" class="cc-box" />
                </div>
                <div>
                    <label><i class="fa-solid fa-building-shield"></i> Crime Station</label>
                    <input type="text" class="cc-box" placeholder="crime police station name"/>
                </div>
                <div>
                    <label><i class="fa-solid fa-calendar-days"></i> Date of Crime</label>
                    <input type="datetime-local" class="cc-box" placeholder="when crime happened?">
                </div>
            </div>
            @*fourth row*@
            <div>
                <div>
                    <label><i class="fa-solid fa-calendar-days"></i> Current Date & Time</label>
                    <input type="datetime-local" class="cc-box" placeholder="enter current date and time"/>
                </div>
            </div>
            @*fifth row*@
            <div>
                <button class=" send">send</button>
                <input type="reset" value="clear" class=" clear" />
            </div>
        </div>
    </div>
    <br />
