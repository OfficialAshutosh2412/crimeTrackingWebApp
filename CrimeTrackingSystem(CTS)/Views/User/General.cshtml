@model CrimeTrackingSystem_CTS_.Models.GeneralComplainViewModel
@{
    ViewBag.UserTitle = "General Complain";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@if ((string)TempData["result"] == "true")
{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            Swal.fire({
                icon: 'success',
                title: 'Success',
                text: 'information recorded'
            });
        });
    </script>
}


@*instruction*@
<div class="crime-instruction">
    <div class="pt-5">
        <h3><i class="fa-solid fa-person-chalkboard"></i> Complain Instructions</h3>
        <h6 class="text-danger fw-bolder">फॉर्म भरने के लिए निर्देश |</h6>
    </div>
    <div>
        <ul class="list-unstyled">
            <li><i class="fa-regular fa-hand-point-right"></i> <strong>Police Station : </strong><span class="fw-medium">choose your district police(अपने जिला पुलिस को चुने |)</span> </li>
            <li><i class="fa-regular fa-hand-point-right"></i> <strong>Subject : </strong><span class="fw-medium">write reason, why you are filling this form(कारण लिखें की क्यों आप ये फॉर्म भर रहे हैं |) </span> </li>
            <li><i class="fa-regular fa-hand-point-right"></i> <strong>Involved Person : </strong><span class="fw-medium">Name involvies(अपराध में शामिल लोगो के नाम लिखें |)</span> </li>
            <li><i class="fa-regular fa-hand-point-right"></i> <strong>Details : </strong><span class="fw-medium">give full details in 200 words(२०० शब्दों में पूरी जानकारी दें |)</span> </li>
        </ul>
    </div>
</div>

@using (Html.BeginForm("General", "User", FormMethod.Post))
{
    <div class="admin-gallery-uploader">
        <h1><i class="fa-solid fa-file-signature"></i> General Complain</h1>
        <div class="admin-gallery-item">
            <div class="admin-gallery-item-flex">
                <div>
                    <fieldset>
                        <legend>
                            <i class="fa-solid fa-building-shield"></i>
                            @Html.LabelFor(model => model.PoliceStationName)
                        </legend>
                        <small class="text-danger fw-bold">
                            @Html.ValidationMessageFor(model => model.PoliceStationName, "", new { @class = "text-danger fw-bolder" })
                        </small>
                        @Html.DropDownListFor(model => model.PoliceStationName, (IEnumerable<SelectListItem>)ViewBag.OptionList, "--select--", new { @class = "cc-box" })
                    </fieldset>
                </div>
                <div>
                    <fieldset>
                        <legend>
                            <i class="fa-solid fa-marker"></i>
                            @Html.LabelFor(model => model.Subject)
                        </legend>
                        <small class="text-danger fw-bold">
                            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger fw-bolder" })
                        </small>
                        @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "cc-box" } })
                    </fieldset>
                </div>
            </div>
            <div>
                <fieldset>
                    <legend>
                        <i class="fa-solid fa-handshake"></i>
                        @Html.LabelFor(model => model.InvolvedPersons)
                    </legend>
                    <small class="text-danger fw-bold">
                        @Html.ValidationMessageFor(model => model.InvolvedPersons, "", new { @class = "text-danger fw-bolder" })
                    </small>
                    @Html.EditorFor(model => model.InvolvedPersons, new { htmlAttributes = new { @class = "cc-box", placeholder = "persons who are involved" } })
                </fieldset>
            </div>
            <div>
                <fieldset>
                    <legend>
                        <i class="fa-solid fa-file-pen"></i>
                        @Html.LabelFor(model => model.Details)
                    </legend>
                    <small class="text-danger fw-bold">
                        @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger fw-bolder" })
                    </small>
                    @Html.TextAreaFor(model => model.Details, new { @class = "cc-box", rows = "10" })
                </fieldset>
            </div>
            <div style="margin-left:10px;">
                <button class="btn btn-primary" value="upload" id="myButton"><i class="fa-solid fa-paper-plane"></i> send</button>
                <a href="@Url.Action("GeneralComplainData", "User")" class="p-2 text-primary fw-bolder" style="font-size:10pt"><i class="fa-regular fa-hand-point-right"></i> click here to show complains you filled...</a>
            </div>
        </div>
    </div>
}



