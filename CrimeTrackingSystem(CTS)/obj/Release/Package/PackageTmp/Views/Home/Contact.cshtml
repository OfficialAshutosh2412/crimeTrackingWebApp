@model CrimeTrackingSystem_CTS_.Models.ContactViewModel

@{
    ViewBag.Title = "Contact";
}

@if (ViewBag.message != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            Swal.fire({
                icon: 'success',
                title: 'Thank you !',
                text: '@ViewBag.message'
            });
        });
    </script>
}

@*contact us*@
@using (Html.BeginForm("Contact", "Home", FormMethod.Post))
{
    <div class="admin-gallery-uploader">
        <h1><i class="fa-solid fa-envelopes-bulk"></i> Contact Us</h1>
        <div class="admin-gallery-item">
            <div class="admin-gallery-item-flex">
                <div>
                    <fieldset>
                        <legend>
                            <i class="fa-solid fa-pencil"></i>
                            @Html.LabelFor(model => model.Fullname)
                        </legend>
                        <small class="text-danger fw-bold">
                            @Html.ValidationMessageFor(model => model.Fullname, "", new { @class = "text-danger fw-bolder" })
                        </small>
                        @Html.EditorFor(model => model.Fullname, new { htmlAttributes = new { @class = "cc-box" } })
                    </fieldset>
                </div>
                <div>
                    <fieldset>
                        <legend>
                            <i class="fa-solid fa-envelope"></i>
                            @Html.LabelFor(model => model.Email)
                        </legend>
                        <small class="text-danger fw-bold">
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger fw-bolder" })
                        </small>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "cc-box" } })
                    </fieldset>
                </div>
                <div>
                    <fieldset>
                        <legend>
                            <i class="fa-solid fa-phone"></i>
                            @Html.LabelFor(model => model.Phone)
                        </legend>
                        <small class="text-danger fw-bold">
                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger fw-bolder" })
                        </small>
                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "cc-box" } })
                    </fieldset>
                </div>
            </div>
            <div class="admin-gallery-item-flex">
                <div>
                    <fieldset>
                        <legend>
                            <i class="fa-solid fa-bullseye"></i>
                            @Html.LabelFor(model => model.Purpose)
                        </legend>
                        <small class="text-danger fw-bold">
                            @Html.ValidationMessageFor(model => model.Purpose, "", new { @class = "text-danger fw-bolder" })
                        </small>
                        @Html.EditorFor(model => model.Purpose, new { htmlAttributes = new { @class = "cc-box" } })
                    </fieldset>
                </div>
            </div>
            <div>
                <fieldset>
                    <legend>
                        <i class="fa-solid fa-file"></i>
                        @Html.LabelFor(model => model.Details)
                    </legend>
                    <small class="text-danger fw-bold">
                        @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger fw-bolder" })
                    </small>
                    @Html.TextAreaFor(model => model.Details, new { @class = "cc-box",rows="10" })
                </fieldset>
            </div>
            <div style="margin-left:10px;">
                <button class="btn btn-primary" value="upload" id="myButton"><i class="fa-solid fa-paper-plane"></i> send</button>
            </div>
        </div>
    </div>

}