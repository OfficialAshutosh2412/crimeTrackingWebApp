@model IEnumerable<CrimeTrackingSystem_CTS_.Models.CriminalGallery>
@{
    ViewBag.Title = "Wanted_Lists";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="gallery-bg" style="background-image: url('../../Images/newone.jpg') !important;">
    <h1>
        Wanted Lists
    </h1>
</div>

<div class="cts-gallery-container">
    <div class="cts-gallery">
        <h4>Wanted Criminal List </h4>
        <div class="row row-cols-sm-2 row-cols-1 row-cols-md-3 row-cols-lg-4 g-3 gallery-item-container">
            @foreach (var item in Model)
            {
                    <div class="col gallery-item" style="box-shadow:0px 0px 2px 0px #bfbebe;">
                        <div>
                            <a href="@Url.Content(item.CriminalImage)" target="_blank"><img src="@Url.Content(item.CriminalImage)" alt="event image" /></a>
                            <div>
                                <p>Reward: @item.Reward</p>
                                <p>Name: @item.Name</p>
                                <p>Affected Organisation: @item.AffectedOrganisation</p>
                                <p>Details: @item.Details</p>
                            </div>
                        </div>
                    </div>
            }
        </div>
    </div>
</div>

