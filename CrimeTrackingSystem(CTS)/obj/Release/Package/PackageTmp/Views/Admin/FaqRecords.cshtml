@model IEnumerable<CrimeTrackingSystem_CTS_.Models.FAQ>
@{
    ViewBag.AdminTitle = "FAQ Records";
    ViewBag.PageTitle = "FAQ Records";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="p-2">
    <a class="btn btn-sm btn-outline-warning" href="@Url.Action("FaqRecordInsertion","Admin")">create new entry</a>
    <button class="btn btn-sm btn-secondary border border-light" onclick="FaqRecordPrint()">print data</button>
</div>

<div class="tableForView border border-warning rounded-2" id="faqRecord">
    <div>
        <table class="table table-bordered table-striped" width="100%" cellspacing="0" border="1">
            <thead class="table-warning">
                <tr>
                    <th>ID</th>
                    <th>Question</th>
                    <th>Answer</th>
                </tr>
            </thead>
            <tbody class="table-light">
                @if (Model != null)
                {
                    foreach (var listdata in Model)
                    {
                        <tr>
                            <td>@listdata.Id</td>
                            
                            <td>@listdata.Questions</td>
                            <td>@listdata.Answer</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>


