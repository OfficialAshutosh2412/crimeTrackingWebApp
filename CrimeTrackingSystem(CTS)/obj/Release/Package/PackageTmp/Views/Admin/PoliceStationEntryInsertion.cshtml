@model CrimeTrackingSystem_CTS_.Models.PoliceStationViewModel
@{
    ViewBag.AdminTitle = "Police Station Insertion";
    ViewBag.PageTitle = "Police Stations Insertion";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@Html.Raw(TempData["SizeError"])
@Html.Raw(TempData["ExtensionError"])
@if ((string)TempData["result"] == "true")
{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            Swal.fire({
                icon: 'success',
                title: 'Success',
                text: 'data recorded successfully !'
            });
        });
    </script>
}
@using (Html.BeginForm("PoliceStationEntryInsertion", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="admin-gallery-uploader">
        <h1><a href="@Url.Action("PoliceStationEntry","Admin")" title="go back" class="text-decoration-none btn btn-outline-danger"><i class="fa-solid fa-arrow-left"></i></a>Police Station Registration</h1>
        <div class="admin-gallery-item">
            <div class="admin-gallery-item-flex">
                <div>
                    <fieldset>
                        <legend><i class="fa-solid fa-pencil"></i> @Html.LabelFor(model => model.ChowkiIncharge)</legend>
                        <small class="text-danger fw-bold">
                            @Html.ValidationMessageFor(model => model.ChowkiIncharge, "", new { @class = "text-danger" })
                        </small>
                        @Html.TextBoxFor(model => model.ChowkiIncharge, new { @class = "cc-box" })
                    </fieldset>
                </div>
                <div>
                    <fieldset>
                        <legend>
                            <i class="fa-solid fa-user"></i>
                            @Html.LabelFor(model => model.Agent)
                        </legend>
                        <small class="text-danger fw-bold">
                            @Html.ValidationMessageFor(model => model.Agent, "", new { @class = "text-danger" })
                        </small>
                        @Html.TextBoxFor(model => model.Agent, new { @class = "cc-box" })
                    </fieldset>
                </div>
            </div>
            <div>
                <fieldset>
                    <legend>
                        <i class="fa-solid fa-building-shield"></i>
                        @Html.LabelFor(model => model.PoliceStationName)
                    </legend>
                    <small class="text-danger fw-bold">
                        @Html.ValidationMessageFor(model => model.PoliceStationName, "", new { @class = "text-danger" })
                    </small>
                    @Html.TextBoxFor(model => model.PoliceStationName, new { @class = "cc-box" })
                </fieldset>
            </div>
            <div class="admin-gallery-item-flex">
                <div>
                    <fieldset>
                        <legend>
                            <i class="fa-solid fa-phone"></i>
                            @Html.LabelFor(model => model.CUGNumberOne, new { @class = "form-label " })
                        </legend>
                        <small class="text-danger fw-bold">
                            @Html.ValidationMessageFor(model => model.CUGNumberOne, "", new { @class = "text-danger" })
                        </small>
                        @Html.TextBoxFor(model => model.CUGNumberOne, new { @class = "cc-box" })
                    </fieldset>
                </div>
                <div>
                    <fieldset>
                        <legend>
                            <i class="fa-solid fa-phone"></i>
                            @Html.LabelFor(model => model.CUGNumberSecond, new { @class = "form-label " })
                        </legend>
                        <small class="text-danger fw-bold">
                            @Html.ValidationMessageFor(model => model.CUGNumberSecond, "", new { @class = "text-danger" })
                        </small>
                        @Html.TextBoxFor(model => model.CUGNumberSecond, new { @class = "cc-box" })
                    </fieldset>
                </div>
            </div>
            <div>
                <fieldset>
                    <legend>
                        <i class="fa-solid fa-mobile"></i>
                        @Html.LabelFor(model => model.AgentPhone, new { @class = "form-label " })
                    </legend>
                    <small class="text-danger fw-bold">
                        @Html.ValidationMessageFor(model => model.AgentPhone, "", new { @class = "text-danger" })
                    </small>
                    @Html.TextBoxFor(model => model.AgentPhone, new { @class = "cc-box" })
                </fieldset>
            </div>
            <div>
                <fieldset>
                    <legend>
                        <i class="fa-regular fa-image"></i>
                        @Html.LabelFor(model => model.PoliceStationImage)
                    </legend>
                    <input type="file" name="ImageFile" class="cc-box" required style="height:200px;border:1px solid #787878;cursor:pointer" />
                </fieldset>
            </div>
            <div style="margin-left:10px;">
                <button class="btn btn-primary" value="upload" id="myButton"> <i class="fa-solid fa-cloud-arrow-up"></i> upload data</button>
            </div>
        </div>
        </div>
}
